extends ../../layouts/common.pug
block content
  .container
    h3 List books in library
    a.d-inline-block.mb-2(href="/books") Back

    table.table
      thead
        tr
          th ID 
          th Title
          th Description
          th
      tbody
        each book in books
          tr
              th= book.id
              td= book.title
              td= book.desc 
              td
                span &nbsp;
                a(href=`/books/${book.id}/delete`) Delete
                span 
                a(href=`/books/${book.id}/update`) Update