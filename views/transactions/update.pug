extends ../layouts/common.pug
block content
  .container
    h3 Update your transaction
    a.d-inline-block.mb-2(href="/transactions/show") Back

    form(action=`/transactions/${updateTrans.id}/update`, method="post")
      .form-group.input-group
        .input-group-prepend
          label.input-group-text Is Complete?
        select.custom-select(id="complete",name="isComplete")
          option(value= "1", selected= updateTrans.isComplete === 1)  True
          option(value= "0", selected= updateTrans.isComplete === 0) False
      button.btn.btn-primary Update
      