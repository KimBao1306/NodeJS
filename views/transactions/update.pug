extends ../../layouts/common.pug
block content
  div(class="container")
    h3 Update your transaction
    a(class="d-inline-block mb-2", href="/transactions/show") Back

    form(action=`/transactions/${updateTrans.id}/update`, method="post")
      div(class="form-group input-group")
        div(class="input-group-prepend")
          label(class="input-group-text") Is Complete?
        select(class="custom-select", id="complete",name="isComplete")
          option(value= "1", selected= updateTrans.isComplete === 1)  True
          option(value= "0", selected= updateTrans.isComplete === 0) False
      button(class="btn btn-primary") Update
      